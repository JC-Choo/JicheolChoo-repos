<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="dev.chu.memo.ui.MainActivity" />

        <variable
            name="roomVM"
            type="dev.chu.memo.ui.memo.MemoViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context=".ui.MainActivity">

                <Button
                    android:id="@+id/main_bt_memo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:onClick="@{() -> activity.onClickMemo()}"
                    android:padding="10dp"
                    android:text="메모 화면"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/main_bt_corona"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:onClick="@{() -> activity.onClickCorona()}"
                    android:padding="10dp"
                    android:text="구글 지도 테스트"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/main_bt_bottom_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:onClick="@{() -> activity.onClickBottomNavigationActivity()}"
                    android:padding="10dp"
                    android:text="바텀네비 테스트"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/main_bt_github"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:onClick="@{() -> activity.onClickGithubReposActivity()}"
                    android:padding="10dp"
                    android:text="깃헙 rx 테스"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/main_bt_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:onClick="@{() -> activity.onClickUserActivity()}"
                    android:padding="10dp"
                    android:text="깃헙 유저 화면(코루틴)"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/main_bt_mvi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:onClick="@{() -> activity.onClickMviActivity()}"
                    android:padding="10dp"
                    android:text="MVI pattern"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/main_bt_motion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:onClick="@{() -> activity.onClickMotionActivity()}"
                    android:padding="10dp"
                    android:text="Motion layout example"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/main_bt_search_repositories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:onClick="@{() -> activity.onClickSearchRepositoriesActivity()}"
                    android:padding="10dp"
                    android:text="SearchRepositoriesActivity"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/main_bt_fav_tv_shows"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:onClick="@{() -> activity.onClickFavTvShowsActivity()}"
                    android:padding="10dp"
                    android:text="FavTvShowsActivity"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:onClick="@{() -> activity.onClickFavTvSpeechActivity()}"
                    android:padding="10dp"
                    android:text="SpeechActivity"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:onClick="@{() -> activity.onClickImageLibraryComparisonActivity()}"
                    android:padding="10dp"
                    android:text="ImageLibraryComparisonActivity"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_bottom_sheet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"
                    android:onClick="@{() -> activity.onClickBottomSheet()}"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Show Bottom Sheet"
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <include
            android:id="@+id/main_bs"
            layout="@layout/bottom_sheet" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>