<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.chu.rv_drag_to_reorder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Memo">
        <activity android:name="dev.chu.rv_drag_to_reorder.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".reorder.ReorderActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".swipe.SwipeToDismissActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>